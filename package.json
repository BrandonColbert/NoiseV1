{
	"name": "noise",
	"version": "0.1.0",
	"description": "Configurable playlist creator",
	"author": "Brandon Colbert",
	"url": "https://brandoncolbert.github.io/projects/noise.html",
	"license": "GPL-3.0-only",
	"private": true,
	"main": "app/js/main.js",
	"scripts": {
		"start": "electron .",
		"build": "tsc && addons\\build.bat",
		"clean": "rmdir app\\js /S /Q",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"build": {
		"productName": "Noise",
		"appId": "exn.database.noise",
		"win": {
			"target": [
				"portable"
			],
			"icon": "app/resources/icons/icon.png"
		},
		"portable": {
			"artifactName": "${productName} ${version}.${ext}"
		},
		"directories": {
			"output": "dist",
			"buildResources": "dist/buildResources"
		},
		"files": [
			"app/",
			"node_modules/",
			"package.json",
			"LICENSE"
		],
		"extraResources": [
			"app/resources/data/"
		]
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/BrandonColbert/Noise.git"
	},
	"devDependencies": {
		"@types/uuid": "^8.3.0",
		"electron": "^13.1.6",
		"electron-builder": "^22.10.5"
	},
	"dependencies": {
		"uuid": "^8.3.2"
	}
}
