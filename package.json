{
	"name": "noise",
	"version": "0.1.0",
	"description": "Configurable playlist creator",
	"author": "Brandon Colbert",
	"url": "https://brandoncolbert.github.io/projects/noise.html",
	"license": "GPL-3.0-only",
	"private": true,
	"main": "app/js/main.js",
	"scripts": {
		"build": "tsc",
		"start": "electron .",
		"test": "echo \"Error: no test specified\" && exit 1",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"clean": "rmdir app\\js /S /Q"
	},
	"build": {
		"productName": "Noise",
		"appId": "exn.database.noise",
		"win": {
			"target": [
				"portable"
			],
			"icon": "app/resources/icons/icon.png"
		},
		"portable": {
			"artifactName": "${productName} ${version}.${ext}"
		},
		"directories": {
			"output": "dist",
			"buildResources": "dist/buildResources"
		}
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/BrandonColbert/Noise.git"
	},
	"devDependencies": {
		"@types/uuid": "^8.3.0",
		"electron": "^13.0.1",
		"electron-builder": "^22.10.5"
	},
	"dependencies": {
		"uuid": "^8.3.2"
	}
}
